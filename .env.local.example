# ============================================
# REQUIRED FOR DEVELOPMENT
# ============================================

# Authentication Secret (REQUIRED)
# Generate with: node scripts/generate-secret.js
# This encrypts session tokens and cookies
NEXTAUTH_SECRET=

# ============================================
# OPTIONAL - Smart Defaults for Development
# ============================================

# Application URL (default: http://localhost:3000)
# NEXTAUTH_URL=http://localhost:3000

# Database (default: SQLite at file:./data/gthanks.db)
# For production-like setup, use PostgreSQL:
# DATABASE_URL=postgresql://user:pass@localhost:5432/gthanks
DATABASE_URL=file:./data/gthanks.db

# Email Provider (default: console)
# - console: Logs magic links to terminal (perfect for dev)
# - smtp: Use real SMTP server
# - resend: Use Resend service
# EMAIL_PROVIDER=console

# ============================================
# OPTIONAL - Production Services
# ============================================

# SMTP Email (only if EMAIL_PROVIDER=smtp)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@gthanks.app
# EMAIL_FROM_NAME=gThanks

# Resend Email (only if EMAIL_PROVIDER=resend)
# RESEND_API_KEY=re_...

# OAuth Providers (optional - enables social login)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# FACEBOOK_CLIENT_ID=
# FACEBOOK_CLIENT_SECRET=
# APPLE_ID=
# APPLE_SECRET=

# Monitoring (production only)
# SENTRY_DSN=
# SENTRY_ORG=
# SENTRY_PROJECT=
