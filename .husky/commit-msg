#!/bin/sh

# Conventional commit pattern
commit_regex='^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: .{1,100}$'

# Get the commit message
commit_message=$(cat "$1")

# Check if commit message follows conventional commits format
if ! echo "$commit_message" | grep -qE "$commit_regex"; then
  echo "❌ Invalid commit message format!"
  echo ""
  echo "Your commit message:"
  echo "  $commit_message"
  echo ""
  echo "Expected format:"
  echo "  <type>(<scope>): <subject>"
  echo ""
  echo "Examples:"
  echo "  feat: add user authentication"
  echo "  fix(api): resolve memory leak in group service"
  echo "  docs: update README with new setup instructions"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, test, chore, perf, ci, build, revert"
  echo ""
  echo "Rules:"
  echo "  - Subject line max 100 characters"
  echo "  - Use present tense ('add' not 'added')"
  echo "  - Don't capitalize first letter"
  echo "  - No period at the end"
  exit 1
fi

echo "✅ Commit message looks good!"