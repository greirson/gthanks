# gthanks Environment Variables
# Copy this file to .env and fill in your values

# Required - Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=

# OAuth Token Encryption Key (Recommended for Production)
# Generate with: openssl rand -base64 32
# Falls back to NEXTAUTH_SECRET if not set (less secure)
OAUTH_ENCRYPTION_KEY=

# Application URL (default for local development)
NEXTAUTH_URL=http://localhost:3000

# Optional OAuth Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
APPLE_ID=
APPLE_SECRET=

# Optional Email Configuration (for magic links)
EMAIL_FROM=noreply@gthanks.app
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
