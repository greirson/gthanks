generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id                    String  @id @default(cuid())
  userId                String
  type                  String
  provider              String
  providerAccountId     String
  refresh_token         String?
  access_token          String?
  expires_at            Int?
  token_type            String?
  scope                 String?
  id_token              String?
  session_state         String?
  encryptedAccessToken  String?
  encryptedRefreshToken String?
  tokenIv               String?
  user                  User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Group {
  id               String            @id @default(cuid())
  name             String
  description      String?
  avatarUrl        String?
  visibility       String            @default("private")
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  groupInvitations GroupInvitation[]
  listGroups       ListGroup[]
  userGroups       UserGroup[]
}

model GroupInvitation {
  id         String    @id @default(cuid())
  groupId    String
  email      String
  token      String    @unique
  invitedBy  String
  createdAt  DateTime  @default(now())
  expiresAt  DateTime
  acceptedAt DateTime?
  user       User      @relation(fields: [invitedBy], references: [id], onDelete: Cascade)
  group      Group     @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@index([invitedBy, createdAt])
  @@index([email, acceptedAt])
  @@index([groupId, acceptedAt])
  @@index([expiresAt])
  @@index([invitedBy])
  @@index([token])
  @@index([email])
  @@index([groupId])
}

model List {
  id                  String           @id @default(cuid())
  name                String
  description         String?
  ownerId             String
  visibility          String           @default("private")
  password            String?
  shareToken          String?          @unique
  slug                String?
  hideFromProfile     Boolean          @default(false)
  giftCardPreferences String?          @default("[]")
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt
  user                User             @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  listAdmins          ListAdmin[]
  listGroups          ListGroup[]
  listInvitations     ListInvitation[]
  listWishes          ListWish[]

  @@unique([ownerId, slug])
  @@index([ownerId, hideFromProfile])
  @@index([slug])
  @@index([createdAt])
  @@index([ownerId, visibility])
  @@index([shareToken])
  @@index([ownerId])
}

model ListAdmin {
  listId  String
  userId  String
  addedAt DateTime @default(now())
  addedBy String
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  list    List     @relation(fields: [listId], references: [id], onDelete: Cascade)

  @@id([listId, userId])
  @@index([userId])
  @@index([listId])
}

model ListGroup {
  listId   String
  groupId  String
  sharedAt DateTime @default(now())
  sharedBy String
  group    Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  list     List     @relation(fields: [listId], references: [id], onDelete: Cascade)

  @@id([listId, groupId])
  @@index([listId, groupId])
  @@index([groupId, sharedAt])
  @@index([groupId])
  @@index([listId])
}

model ListInvitation {
  id         String    @id @default(cuid())
  listId     String
  email      String
  token      String    @unique
  invitedBy  String
  createdAt  DateTime  @default(now())
  expiresAt  DateTime
  acceptedAt DateTime?
  user       User      @relation(fields: [invitedBy], references: [id], onDelete: Cascade)
  list       List      @relation(fields: [listId], references: [id], onDelete: Cascade)

  @@unique([listId, email])
  @@index([email, acceptedAt])
  @@index([listId, acceptedAt])
  @@index([expiresAt])
  @@index([invitedBy])
  @@index([token])
  @@index([email])
  @@index([listId])
}

model ListWish {
  listId    String
  wishId    String
  wishLevel Int      @default(1)
  addedAt   DateTime @default(now())
  wish      Wish     @relation(fields: [wishId], references: [id], onDelete: Cascade)
  list      List     @relation(fields: [listId], references: [id], onDelete: Cascade)

  @@id([listId, wishId])
  @@index([wishId])
  @@index([listId])
}

model MagicLink {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([token])
  @@index([email])
}

model Reservation {
  id            String    @id @default(cuid())
  wishId        String
  userId        String
  reservedAt    DateTime  @default(now())
  purchasedAt   DateTime?
  purchasedDate DateTime?
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  wish          Wish      @relation(fields: [wishId], references: [id], onDelete: Cascade)

  @@unique([wishId, userId])
  @@index([userId])
  @@index([wishId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id                   String            @id @default(cuid())
  email                String            @unique
  name                 String?
  avatarUrl            String?
  createdAt            DateTime          @default(now())
  updatedAt            DateTime          @updatedAt
  emailVerified        DateTime?
  image                String?
  role                 String            @default("user")
  isAdmin              Boolean           @default(false)
  lastLoginAt          DateTime?
  suspendedAt          DateTime?
  suspendedBy          String?
  suspensionReason     String?
  themePreference      String?           @default("system")
  isOnboardingComplete Boolean           @default(false)
  username             String?           @unique
  usernameSetAt        DateTime?
  canUseVanityUrls     Boolean           @default(true)
  showPublicProfile    Boolean           @default(false)
  accounts             Account[]
  groupInvitations     GroupInvitation[]
  lists                List[]
  listAdmins           ListAdmin[]
  listInvitations      ListInvitation[]
  reservations         Reservation[]
  sessions             Session[]
  emails               UserEmail[]
  userGroups           UserGroup[]
  preference           UserPreference?
  wishes               Wish[]

  @@index([canUseVanityUrls])
  @@index([username])
  @@index([isAdmin])
  @@index([role])
  @@index([email])
}

model UserEmail {
  id                String    @id @default(cuid())
  userId            String
  email             String    @unique
  isPrimary         Boolean   @default(false)
  isVerified        Boolean   @default(false)
  verifiedAt        DateTime?
  verificationToken String?   @unique
  tokenExpiresAt    DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isPrimary])
  @@index([verificationToken])
  @@index([isVerified])
  @@index([isPrimary])
  @@index([email])
  @@index([userId])
}

model UserGroup {
  userId    String
  groupId   String
  role      String   @default("member")
  joinedAt  DateTime @default(now())
  invitedBy String?
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, groupId])
  @@index([joinedAt])
  @@index([groupId, role])
  @@index([groupId])
  @@index([userId])
}

model UserPreference {
  id                         String   @id @default(cuid())
  userId                     String   @unique
  sortBy                     String   @default("createdAt")
  sortOrder                  String   @default("desc")
  wishLevelMin               Int?
  wishLevelMax               Int?
  priceMin                   Float?
  priceMax                   Float?
  autoAcceptGroupInvitations Boolean  @default(false)
  createdAt                  DateTime @default(now())
  updatedAt                  DateTime @updatedAt
  user                       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now())

  @@unique([identifier, token])
}

model Wish {
  id             String        @id @default(cuid())
  title          String
  notes          String?
  url            String?
  price          Float?
  currency       String?
  imageUrl       String?
  sourceImageUrl String?
  localImagePath String?
  imageStatus    String        @default("PENDING")
  quantity       Int           @default(1)
  size           String?
  color          String?
  wishLevel      Int           @default(1)
  ownerId        String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  listWishes     ListWish[]
  reservations   Reservation[]
  user           User          @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([ownerId, wishLevel])
  @@index([price])
  @@index([wishLevel])
  @@index([ownerId, createdAt])
  @@index([imageStatus])
  @@index([ownerId])
}

model SiteSettings {
  id                    String    @id @default("global")
  loginMessage          String?
  loginMessageUpdatedAt DateTime?
  loginMessageUpdatedBy String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("site_settings")
}
