# gthanks Production Environment Variables
  # Copy to .env and fill in required values

  # =============================================================================
  # REQUIRED - Application will not start without these
  # =============================================================================

  # PostgreSQL database password (use a strong random password)
  # Generate with: openssl rand -base64 32
  POSTGRES_PASSWORD=

  # Public URL where the app is accessible (include https://)
  NEXTAUTH_URL=https://your-domain.com

  # Auth session encryption key (must be at least 32 characters)
  # Generate with: openssl rand -base64 32
  NEXTAUTH_SECRET=

  # =============================================================================
  # OPTIONAL - Database configuration (defaults work for most setups)
  # =============================================================================

  # PostgreSQL database name (default: gthanks)
  # POSTGRES_DB=gthanks

  # PostgreSQL username (default: gthanks)
  # POSTGRES_USER=gthanks

  # Docker image version (default: latest)
  # GTHANKS_VERSION=latest

  # =============================================================================
  # OPTIONAL - OAuth Providers (enable social login)
  # =============================================================================

  # Google OAuth - https://console.cloud.google.com/apis/credentials
  # GOOGLE_CLIENT_ID=
  # GOOGLE_CLIENT_SECRET=

  # Facebook OAuth - https://developers.facebook.com/apps
  # FACEBOOK_CLIENT_ID=
  # FACEBOOK_CLIENT_SECRET=

  # Apple OAuth - https://developer.apple.com/account/resources/identifiers
  # APPLE_ID=
  # APPLE_SECRET=

  # =============================================================================
  # OPTIONAL - Email Configuration (for magic link login)
  # =============================================================================

  # Email provider: console (logs to stdout), smtp, resend
  # Default: console (magic links printed to container logs)
  # EMAIL_PROVIDER=console

  # Sender email address
  # EMAIL_FROM=noreply@your-domain.com

  # SMTP settings (required if EMAIL_PROVIDER=smtp)
  # SMTP_HOST=smtp.gmail.com
  # SMTP_PORT=587
  # SMTP_USER=
  # SMTP_PASS=